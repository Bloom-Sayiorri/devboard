generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  username String
  email    String
  password String
  avatar   String?
  Board    Board  @relation(fields: [boardId], references: [id])
  boardId  Int
}

model Board {
  id    Int     @id @default(autoincrement())
  name  String
  image String?
  tasks Task[]
  users User[]
}

model Task {
  id         Int      @id @default(autoincrement())
  name       String
  description String?
  status String @default("todo")
  createdAt DateTime
  updatedAt DateTime
  Board      Board   @relation(fields: [boardId], references: [id])
  boardId    Int
}

enum ROLE {
  ADMIN
  REGULAR
}

enum STATUS {
  STARTED
  PENDING
  DONE
  ONGOING
}